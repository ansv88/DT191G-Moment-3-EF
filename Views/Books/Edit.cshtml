@model Moment_3_EF.ViewModels.BookEditViewModel

@{
    ViewData["Title"] = "Ändra bokdetaljer";
}

<h2>Redigera</h2>

<h3>Bokdetaljer</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="WriterId" class="control-label">Välj en författare</label>
                <select asp-for="WriterId" class="form-control" asp-items="ViewBag.Writers">
                    <option value="">-- Välj en författare --</option>
                </select>
                <span asp-validation-for="WriterId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="WriterName">Eller redigera författarnamnet</label>
                <input asp-for="WriterName" class="form-control" />
                <span asp-validation-for="WriterName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tillbaka till boklistan</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
